{
  "name": "wordpress-org-mcp-server",
  "version": "1.0.5",
  "description": "MCP server for WordPress.org plugin analysis and comparison",
  "main": "dist/index.js",
  "bin": {
    "wordpress-org-mcp-server": "dist/cli.js"
  },
  "files": [
    "dist"
  ],
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "node dist/index.js",
    "lint": "echo 'No linting configured'",
    "test": "npm run test:unit",
    "test:unit": "jest tests --testPathIgnorePatterns=tests/integration",
    "test:integration": "npm run build && NODE_OPTIONS=\"--experimental-vm-modules\" jest tests/integration --testTimeout=60000",
    "test:all": "npm run test:unit && npm run test:integration",
    "test:watch": "jest --watch tests --testPathIgnorePatterns=tests/integration",
    "test:coverage": "jest --coverage tests --testPathIgnorePatterns=tests/integration"
  },
  "keywords": ["mcp", "wordpress", "plugin", "analysis"],
  "author": "Your Name",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/juanma-wp/wordpress-org-mcp.git"
  },
  "homepage": "https://github.com/juanma-wp/wordpress-org-mcp",
  "bugs": {
    "url": "https://github.com/juanma-wp/wordpress-org-mcp/issues"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.5.0",
    "node-fetch": "^3.3.2",
    "yauzl": "^3.0.0",
    "diff": "^5.1.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/yauzl": "^2.10.3",
    "@types/diff": "^5.0.9",
    "@types/jest": "^29.5.0",
    "jest": "^29.5.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.0.0"
  }
}